<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cupk.mapper.ActivityMapper">
  <select id="findAllActivities" resultMap="ActivityWithUser">
    select * from t_activity
  </select>
  <resultMap id="ActivityWithUser" type="com.cupk.pojo.Activity">
    <id column="id" property="id"></id>
    <result column="content" property="content"></result>
    <result column="datetime" property="datetime"></result>
    <result column="num_required" property="num_participants"></result>
    <result column="state" property="state"></result>
    <association property="user" column="user_id" javaType="com.cupk.pojo.Activity"
                 select="com.cupk.mapper.UserMapper.findByID"></association>
  </resultMap>
  <insert id="insertActivity" parameterType="com.cupk.pojo.Activity">
    insert into t_activity(content,datetime,num_required,num_participants,state,user_id)
    values(#{content},#{datetime},#{num_required},#{num_participants},#{state},#{id})
  </insert>
  <select id="findActivitiesByStr" resultType="com.cupk.pojo.Activity" parameterType="java.lang.String">
    select * from t_activity
    where 1=1
    <if test="Str!=null and Str!=''">
      and content like CONCAT('%',#{Str},'%')
      or user_id=
         (select id from t_user where name like CONCAT('%',#{Str},'%'))
    </if>
  </select>
</mapper>