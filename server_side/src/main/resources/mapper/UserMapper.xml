<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cupk.mapper.UserMapper">
    <select id="findUserByID" resultType="com.cupk.pojo.User">
        select * from t_user
        where name=(select name from t_login
               where id = #{id})
    </select>
    <select id="findAllUsers" resultType="com.cupk.pojo.User">
        select * from t_user
    </select>
</mapper>