<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cupk.mapper.UserMapper">

    <select id="findAllUsers">
        select * from t_user
    </select>
    <select id="findByID" resultType="com.cupk.pojo.User">
        select * from t_user
        where id=#{id}
    </select>

    <insert id="register" parameterType="com.cupk.pojo.User">
        insert into t_user(name,password,sex,birthday,record_date,location,head_url)
        values(#{name},#{password},#{sex},#{birthday},#{record_date},#{location},#{head_url})
    </insert>

    <delete id="deleteUserById">
        delete from t_user where id=#{id}
    </delete>

    <select id="login" resultType="com.cupk.pojo.User">
        select * from t_user where (name = #{name} and password = #{password})
    </select>

    <select id="selectRoleByName" resultType="java.lang.Integer">
        select role from t_user
        where name = #{name}
    </select>
    <update id="banUserById" >
        update t_user
        <set>
            <if test="role != null">
                role=#{role}
            </if>
        </set>
         where id=#{id} and role != 0
    </update>

</mapper>